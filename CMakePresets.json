{
    "version": 1,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default",
            "description": "Default build using Ninja",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic",
                "CMAKE_CXX_STANDARD_REQUIRED": "YES",
                "CMAKE_CXX_EXTENSIONS": "OFF"
            }
        }
    ]
}
